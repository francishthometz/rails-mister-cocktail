<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1><%= @cocktail.name %></h1>
      <%= link_to "Back to Cocktails", cocktails_path %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 col-md-6">
      <h3>Recipe</h3>
      <table class="table table-bordered">
        <thead>
          <th>Ingredient</th>
          <th>Description</th>
          <th>Action</th>
        </thead>
        <tbody>
          <% @cocktail.doses.each do |dose| %>
          <tr>
  <td>
    <p>
      <%= dose.ingredient.name %>
    </p>
  </td>
  <td>
    <p>
      <%= dose.description %>
    </p>
  </td>
  <td>
    <%= link_to dose_path(dose.id), method: :delete, data: { confirm: "Are you sure?" } do %>
    <p><i class="fas fa-trash" aria-hidden="true"></i>
      <p>
        <% end %>
  </td>
</tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-sm-12 col-md-6">
      <%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %>
    </div>
  </div>
</div>
